<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.radrails.rails.internal.ui.RailsPerspectiveFactory"
            icon="icons/radrails1616.png"
            id="org.radrails.rails.ui.PerspectiveRails"
            name="%perspective.name.0"/>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/rails_ovr.gif"
            id="org.radrails.rails.ui.natureImage"
            natureId="org.radrails.rails.core.railsnature">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.radrails.rails.ui.category"
            class="org.radrails.rails.internal.ui.NewProjectWizard"
            finalPerspective="org.radrails.rails.ui.PerspectiveRails"
            icon="icons/newproj.gif"
            id="org.radrails.rails.ui.projectWizard"
            name="%wizard.name"
            preferredPerspectives="org.radrails.rails.ui.PerspectiveRails"
            project="true">
         <description>
            Create a new Ruby/Rails project
         </description>
      </wizard>
      <category
            id="org.radrails.rails.ui.category"
            name="%RailsWizardsCategory.name">
      </category>
      <primaryWizard
            id="org.radrails.rails.ui.projectWizard">
      </primaryWizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.radrails.rails.ui.PerspectiveRails">
         <newWizardShortcut
               id="org.radrails.rails.ui.projectWizard">
         </newWizardShortcut>
         <viewShortcut
               id="com.aptana.explorer.view">
         </viewShortcut>
         <viewShortcut
               id="org.eclipse.ui.views.ContentOutline">
         </viewShortcut>
         <view
               id="org.eclipse.ui.views.ContentOutline"
               ratio="0.75"
               relationship="bottom"
               relative="com.aptana.explorer.view"
               visible="false">
         </view>
         <viewShortcut
               id="com.aptana.terminal.views.terminal">
         </viewShortcut>
         <view
               id="com.aptana.terminal.views.terminal"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="false">
         </view>
         <view
               id="org.eclipse.pde.runtime.LogView"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="false">
         </view>
         <view
               id="org.eclipse.ui.views.ProblemView"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="false">
         </view>
         <view
               id="org.eclipse.ui.views.TaskList"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="false">
         </view>
         <newWizardShortcut
               id="com.aptana.ui.wizards.new.file">
         </newWizardShortcut>
         <newWizardShortcut
               id="org.eclipse.ui.wizards.new.folder">
         </newWizardShortcut>
         <actionSet
               id="org.radrails.rails.ui.actionSet">
         </actionSet>
         <perspectiveShortcut
               id="com.aptana.ui.WebPerspective">
         </perspectiveShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="com.aptana.ui.WebPerspective">
         <perspectiveShortcut
               id="org.radrails.rails.ui.PerspectiveRails">
         </perspectiveShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.radrails.rails.ui.category"
            id="org.radrails.rails.ui.command.server"
            name="%ScriptServerAction.label">
      </command>
      <command
            categoryId="org.radrails.rails.ui.category"
            id="org.radrails.rails.ui.command.debug.server"
            name="%DebugScriptServerAction.label">
      </command>
      <category
            id="org.radrails.rails.ui.category"
            name="%RailsCommandsCategory.name">
      </category>
      <command
            categoryId="org.radrails.rails.ui.category"
            defaultHandler="org.radrails.rails.internal.ui.commands.ViewReleaseNotesCommandHandler"
            description="%ViewReleaseNotes.description"
            id="org.radrails.rails.ui.command.viewreleasenotes"
            name="%ViewReleaseNotes.label">
      </command>
      <command
            categoryId="org.radrails.rails.ui.category"
            defaultHandler="org.radrails.rails.internal.ui.commands.SendFeedbackCommandHandler"
            description="%SendFeedbackCommand.description"
            id="org.radrails.rails.ui.command.sendfeedback"
            name="%SendFeedbackCommand.label">
      </command>
      <command
            categoryId="org.radrails.rails.ui.category"
            defaultHandler="org.radrails.rails.internal.ui.commands.ReportBugCommandHandler"
            description="%ReportBugCommand.description"
            id="org.radrails.rails.ui.command.reportbug"
            name="%ReportBugCommand.label">
      </command>
      <command
            categoryId="org.radrails.rails.ui.category"
            defaultHandler="org.radrails.rails.internal.ui.commands.ViewLogCommandHandler"
            description="%ViewLogCommand.description"
            id="org.radrails.rails.ui.command.viewlog"
            name="%ViewLogCommand.Label">
      </command>
      <command
            categoryId="org.radrails.rails.ui.category"
            defaultHandler="org.radrails.rails.internal.ui.commands.ClearLogCommandHandler"
            description="%ClearLogCommand.description"
            id="org.radrails.rails.ui.command.clearlog"
            name="%ClearLogCommand.Label">
      </command>
      <command
            categoryId="org.radrails.rails.ui.category"
            id="org.radrails.rails.ui.command.preview"
            name="%PreviewAction.label">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.radrails.rails.ui.command.server"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+SHIFT+\">
      </key>
      <key
            commandId="org.radrails.rails.ui.command.debug.server"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+SHIFT+D">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.radrails.rails.ui.resourceContribution"
            objectClass="org.eclipse.core.resources.IResource">
         <action
               class="org.radrails.rails.internal.ui.actions.RunScriptServerAction"
               definitionId="org.radrails.rails.ui.command.server"
               id="org.radrails.rails.ui.actions.RunScriptServerAction"
               label="%ScriptServerAction.label"
               tooltip="%ScriptServerAction.tooltip">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:help?after=additions">
         <menu
                id="aptanahelp"
                label="%Menu.Help.Aptana.label">
            <command
                commandId="org.radrails.rails.ui.command.sendfeedback"
                style="push">
            </command>
            <command
                commandId="org.radrails.rails.ui.command.reportbug"
                style="push">
            </command>
            <separator
                  name="slot1"
                  visible="true">
            </separator>
            <command
                commandId="org.radrails.rails.ui.command.viewlog"
                style="push">
            </command>
            <command
                commandId="org.radrails.rails.ui.command.clearlog"
                style="push">
            </command>
            <separator
                  name="slot2"
                  visible="true">
            </separator>
            <command
                  commandId="org.radrails.rails.ui.command.viewreleasenotes"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:com.aptana.explorer.gear?after=group.run">
         <command
               commandId="org.radrails.rails.ui.command.server"
               label="%ScriptServerAction.label"
               style="push">
         </command>
         <command
               commandId="org.radrails.rails.ui.command.debug.server"
               label="%DebugScriptServerAction.label"
               style="push">
         </command>
         <command
               commandId="org.radrails.rails.ui.command.preview"
               label="%PreviewAction.label"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.radrails.rails.ui.actionSet"
            label="%RailsRunActionSet.label"
            visible="false">
         <action
               class="org.radrails.rails.internal.ui.actions.RunScriptServerAction"
               definitionId="org.radrails.rails.ui.command.server"
               enablesFor="+"
               id="org.radrails.rails.ui.action.server"
               label="%ScriptServerAction.label"
               menubarPath="org.eclipse.ui.run/runGroup"
               style="push">
            <enablement>
              <and>
                <objectClass name="org.eclipse.core.resources.IResource"/>
                <objectState name="projectNature" value="org.radrails.rails.core.railsnature"/>
              </and>
            </enablement>
         </action>
         <action
               class="org.radrails.rails.internal.ui.actions.DebugScriptServerAction"
               definitionId="org.radrails.rails.ui.command.debug.server"
               enablesFor="+"
               id="org.radrails.rails.ui.action.debug.server"
               label="%DebugScriptServerAction.label"
               menubarPath="org.eclipse.ui.run/runGroup"
               style="push">
           <enablement>
              <and>
                <objectClass name="org.eclipse.core.resources.IResource"/>
                <objectState name="projectNature" value="org.radrails.rails.core.railsnature"/>
              </and>
            </enablement>
         </action>
      </actionSet>
   </extension>
</plugin>
